UPSTOX_CLIENT_ID=your_upstox_client_id
UPSTOX_CLIENT_SECRET=your_upstox_client_secret
NEXT_PUBLIC_UPSTOX_CLIENT_ID=your_public_upstox_client_id

# Monitoring & Analytics (Optional)
